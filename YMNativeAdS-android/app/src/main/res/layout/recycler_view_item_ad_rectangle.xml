<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/ad_rectangle_cardview"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:contentPadding="8dp"
	app:theme="@style/ThemeOverlay.AppCompat.Light"
	>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		
		<ImageView
			android:id="@+id/ad_rectangle_iv_large_pic"
			android:layout_width="150dp"
			android:layout_height="125dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_marginRight="8dp"
			android:scaleType="fitCenter"
			android:src="@mipmap/ic_launcher"
			/>
		
		<TextView
			android:id="@+id/ad_rectangle_tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginBottom="8dp"
			android:layout_toRightOf="@id/ad_rectangle_iv_large_pic"
			android:textAppearance="?android:textAppearanceLarge"
			tools:text="标题"
			/>
		
		<TextView
			android:id="@+id/ad_rectangle_tv_sub_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/ad_rectangle_tv_title"
			android:layout_toRightOf="@id/ad_rectangle_iv_large_pic"
			android:textAppearance="?android:textAppearanceMedium"
			tools:text="子标题子标题子标题子标题子标题子标题子标题子标题子标题子标题"
			/>
	
	</RelativeLayout >

</android.support.v7.widget.CardView >
